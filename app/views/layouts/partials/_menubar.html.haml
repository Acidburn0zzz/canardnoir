#navbar-inner
  #nav-top-bar
    %ul.new_main_menu{ class: page_context[:select_top_menu_nav] }
      %li.menu_item.projects
        %a{ href: explore_projects_path, class: params[:action] == 'explore/projects' ? 'select' : '' }= t :projects_menu
      %li.menu_item.people
        %a{ href: people_path, class: params[:action] == 'people' ? 'select' : '' }= t :people_menu
      %li.menu_item.organizations
        %a{ href: explore_orgs_path, class: params[:action] == 'explore/orgs' ? 'select' : '' }= t :organizations_menu
      %li.menu_item.tools
        %a{ href: tools_path, class: params[:action] == 'tools' ? 'select' : '' }= t :tools
      %li.menu_item.code
        %a{ href: 'http://code.openhub.net', target: '_blank' }
          = t :code
          %i.icon-share
        %li.menu_item.blog
          %a{ href: 'http://blog.openhub.net', target: '_blank' }= t :blog
        = render 'shared/search.html.haml'
