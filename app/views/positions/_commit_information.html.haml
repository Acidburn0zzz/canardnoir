- if position.name.present?
  %p
    - name_fact = position.decorate.name_fact
    - if name_fact
      = link_to position.decorate.project_contributor_or_show_path do
        - if name_fact.commits > 1
          = name_fact.commits
          = t('commits')
        - else
          1
          = t('commits').singularize
      - main_language = name_fact.primary_language
      - if main_language
        = t('.in_mostly')
        = main_language.nice_name
