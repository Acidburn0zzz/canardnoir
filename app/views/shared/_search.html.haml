- unless request.path == root_path
  %form.pull-right#quicksearch{ action: projects_path, style: 'margin-top: -6px' }
    .dropdown
      .btn-group.ux-dropdown
        %a.btn.btn-small.dropdown-toggle{ 'data-toggle' => 'dropdown' }
          %span.selection= t('projects_menu')
          %span.caret
        %ul.dropdown-menu
          %li
            %a{ val: 'people', ghost: 'Search...' }= t('people')
          %li
            %a.default{ val: 'p', ghost: 'Search...' }= t('projects_menu')
          %li
            %a{ val: 'orgs', ghost: 'Search...' }= t('organizations_menu')
          %li
            %a{ val: 'posts', ghost: 'Search...' }= t('forum')
          %li
            %a{ val: '//code.openhub.net/search', ghost: 'Search...', onclick: 'Forms.OhlohCodeSearch();' }
              %i.icon-share= t('code')
        %input.search.text.global_top_search{ type: :text, name: 'query', value: params[:query] }
        %input.search.hidden{ type: 'hidden', name: 'search_type', id: 'search_type', value: 'projects' }
        %button.submit.no_padding{ type: 'submit' }
          .icon-search.global_top_search_icon
