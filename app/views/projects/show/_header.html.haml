#project_masthead
  .col-md-1#project_icon
    %a{href: project_path(@project), itemprop: 'url'}
      - project_icon(@project , :med )

  .col-md-11#project_header
    .pull-left.project_title
      %h1.float_left{ itemprop: 'name' }
        = link_to @project.name, project_path(@project), :style => "color: black;", :itemprop => 'url'
      %small.pull-left.clearfix
        != link_to bootstrap_icon("icon-cogs", "Settings"), settings_project_path(@project)
        - if @project.is_a_duplicate
          - if current_user_is_admin? || (@current_account && @project.is_a_duplicate.account == @current_account)
            |
            != link_to bootstrap_icon("icon-flag", "Edit Duplicate"), edit_project_duplicate_path(@project, @project.is_a_duplicate)
        - else
          |
          -#!= link_to bootstrap_icon("icon-flag", "Report Duplicate"), new_project_duplicate_path(@project)
        - if current_user_is_admin?
          |
          -# TO-DO: Change the Jobs Path later
          -#= link_to bootstrap_icon("icon-tasks", "Jobs"), project_jobs_path(@project)
          = link_to bootstrap_icon("icon-tasks", "Jobs"), project_path(@project)
    .col-md-3.pull-right.no_padding#widgets
      .pull-left#project_header_activity_indicator
        -project_activity_level_class(@project, :thirtyfive)
        -project_activity_level_text(@project, :thirtyfive)
      %div{ itemtype: 'CreativeWork', itemprop: 'interactionCount' }
        .pull-right#i_use_this_container
          .use_count
            = link_to number_with_delimiter(@project.user_count), users_project_path(@project)
          %button.btn.btn-mini.btn-grey.iusethis.float_right{id: "stackit_#{@project.to_param}", class: i_use_this_css, title: "#{@project.name} has been stacked by #{ @project.user_count } users. Click here to add it to your stack." }
            I Use This!
.clearfix
