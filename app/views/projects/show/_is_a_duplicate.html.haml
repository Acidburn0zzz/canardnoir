- duplicate = project.is_a_duplicate
- if duplicate
  .alert.alert-info
    - link = link_to(duplicate.good_project.name, project_path(duplicate.good_project))
    %p!= t('.reported', link: link)
    - if admin? || (@current_account && duplicate.account == @current_account)
      %p
        = bootstrap_button_link_to t('.cancel_request'), duplicate_path(duplicate),
                                   method: :delete, confirm: t('.cancel_request_confirm'),
                                   class: 'btn-warning'
        = bootstrap_button_link_to bootstrap_icon('icon-edit', t('.edit_request')),
                                   edit_project_duplicate_path(project, duplicate),
                                   class: 'btn-info'
  &nbsp;
