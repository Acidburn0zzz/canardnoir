-# NOTE: Replaces account_kudo_button in kudos helper
:ruby
  name = @account.name
  kudo = Kudo.where(sender_id: current_user.id, account_id: @account.id).first
  action = new_kudo_path(account_id: @account.to_param)

- unless !logged_in? || current_user == @account
  - if kudo
    = form_for kudo, action: account_kudo_path(current_user, kudo), method: :post do |f|
      = f.hidden_field '_method', value: 'delete'
      = f.submit "<i class='icon-undo'></i> Undo Kudo".html_safe, class: "btn kudo-btn #{css}"
  - else
    = link_to 'Give Kudo', '#', class: "btn kudo-btn #{css}",
    onclick: "tb_show('Give Kudos to #{name}', '#{action}', false); return false;"
