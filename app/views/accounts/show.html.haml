/ TODO: Internationalize
- content_for :html_title do
  = succeed ' : Show Accounts' do
    = @account.name


- content_for :twitter_card do
  %meta{ content: 'summary', name: 'twitter:card' }
  %meta{ content: '@bdopenhub', name: 'twitter:site' }
  %meta{ content: "#{h(@account.name)}", name: 'twitter:title' }
  %meta{ content: "#{@twitter_detail.description}", name: 'twitter:description' }
  %meta{ content: "#{avatar_img_path(@account, 80)}", name: 'twitter:image' }
  %meta{ content: 'https://www.openhub.net', name: 'twitter:domain' }

= render partial: 'accounts/show/header'

.row
  .col-md-12
    = render partial: 'accounts/show/summary'
= render partial: 'accounts/show/admin' if current_user_is_admin?
.mezzo.padding_one_top
  %h3= t('.dev_history')
  .col-md-12
    - if @account.decorate.vita_status_message
      %p= @account.decorate.vita_status_message
    - else
      = render partial: 'accounts/show/commits_by_projects'
      = render partial: 'accounts/show/commits_by_language'
