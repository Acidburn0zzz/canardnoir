.row-fluid
  .well.well-large.col-md-8.col-md-offset-2.margin_top_20
    %p
      = t('accounts.fields.mobile_verification_hint')
    %p
      = t('.click_on_link_below')

    %button.btn.btn-primary#digits-sign-up
      = t('.verify_using_phone_number')

= form_tag account_verifications_path(@account), class: 'digits-verification' do
  = hidden_field_tag 'verification[service_provider_url]', nil, id: :digits_service_provider_url
  = hidden_field_tag 'verification[credentials]', nil, id: :digits_credentials

:javascript
  digits = new App.TwitterDigits()
  digits.authenticate($('.digits-verification'))
