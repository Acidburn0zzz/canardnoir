.hidden#from_review review
.cleafix
%b.pull-left= t('.rating')
.controls.pull-left{ style: 'margin-left:10px;' }
  .jrating{ id: @project.to_param, score: score, star_style: 'big', data: { show: 'reviews/rater' } }
&nbsp;
.col-md.hidden#rating_spinner
  &nbsp;&nbsp;
  = image_tag('spinner.gif')
- if @rating.try(:persisted?)
  %span#clearfix{ style: 'margin-left:7px;' }
    = link_to t('.clear'), 'javascript:void(0);', class: 'btn btn-mini',
        data: { url: unrate_project_path(@project, show: 'reviews/rater') }, method: :delete
