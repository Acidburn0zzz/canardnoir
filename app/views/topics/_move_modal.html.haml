%button.btn.btn-mini{ 'data-target' => '#moveTopic', 'data-toggle' => 'modal',
  type: 'button', style: 'margin-right: 2px' }= t('.move')

.modal.fade#moveTopic{ 'aria-hidden' => 'true', 'aria-labelledby' => 'moveTopicLabel', role: 'dialog', tabindex: '-1' }
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{ 'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button' }
          %span{ 'aria-hidden' => 'true' } Ã—
        %h4.modal-title#moveTopicLabel= t('.move_topic')
      .modal-body
        = form_for @topic do |f|
          %div= t('.move_to')
          = f.select :forum_id, Forum.all.collect { |forum| [forum.name, forum.id] }
          = f.submit t('.go'), class: 'btn btn-primary button-small', style: 'float: right;'
