%table.table.table-striped
  %thead
    %tr
      %th.first{ width: '45%' }
        %h4.nomargin.strong= t('.discussion')
      %th{ width: '15%' }
        %h4.nomargin.center.strong= t('.posts')
      %th{ width: '25%' }
        %h4.nomargin.strong= t('.poster')
      %th{ width: '15%' }
        %h4.nomargin.strong= t('.freshness')
  %tbody
    - @recent_topics.each do |topic|
      %tr
        %td.first= link_to h(topic.title), topic_path(topic)
        %td.center= topic.posts_count
        - if topic.posts.last
          %td= topic.posts.last.account.name
          %td.freshness= time_ago_in_words(topic.posts.last.created_at)