table do
  tr do
    th 'SlocSet'
    th 'Updated Date'
    th 'As Of'
  end

  job.repository.best_code_set.sloc_sets.each do |sloc_set|
    tr do
      td do
        span sloc_set.id
        span '(Best)' if sloc_set.code_set.best_sloc_set_id == sloc_set.id
        span '(Job)' if job.sloc_set_id == sloc_set.id
      end
      td sloc_set.updated_on ? time_ago_in_days_hours_minutes(sloc_set.updated_on) : 'never'
      td sloc_set.as_of || 'nil'
    end
  end
end
