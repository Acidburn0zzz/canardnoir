  project = Project.find(job.project_id)
  span "Project: "
  span link_to project.name, project_path(project)
  span link_to '(Jobs)', admin_project_jobs_path(project)
end

if job.account_id
  account = Account.find(job.account_id)
  span "Account: "
  span "LINK TO Account: #{account.name}"
end

