
table do
  tr do
    th "Failure Group"
    th "Fail" if job.status == Job::STATUS_RUNNING
    th "Enlisted Projects"
    th "Refetch Repository"
  end

  tr do
    td job.failure_group.nil? ? 'None' : job.failure_group.name
    td link_to 'Fail', mark_as_failed_admin_job_path(job) if job.status == Job::STATUS_RUNNING
    td do
      job.repository.projects.map do |p|
        a p.name, href: project_path(p)
        a '[Jobs]', href: admin_project_jobs_path(p)
      end
    end
    td do
      repo = job.repository
      confirm = "Are you sure you want to start a completely new download of #{repo.url} #{repo.branch_name}?"
      link_to 'Re Fetch', refetch_admin_job_path(job), method: :post, confirm: confirm
    end
  end
end
