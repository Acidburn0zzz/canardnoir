%link{ href: 'http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', rel: 'stylesheet' }
%h2
  Today
.row
  .col-lg-4
    .widget-simple-chart.text-right.card-box
      .circliful-chart.circliful#today_total_feedback{ 'data-bgcolor' => '#ebeff2', 'data-dimension' => '150', 'data-fgcolor' => '#5fbeaa', 'data-fontsize' => '14', 'data-percent' => "#{today_stats_hash['fcp']}", 'data-text' => "#{today_stats_hash['fcp']}%" }
      %h3.text-success.counter
        = today_stats_hash['fc']
      %p.text-muted.text-nowrap Feedback Count
  .col-lg-4
    .card-box.widget-simple-chart.bottomPadding.resetRightPadding
      .donut_chart
        %canvas#today_rating{ height: '150', width: '150' }
      .donut_chart
        %ul#today_rating_list
          %li.five_rating
            %span
              = "Extremely Helpful (#{today_stats_hash['rating_count']['five_rating']})"
          %li.four_rating
            %span
              = "Very Helpful (#{today_stats_hash['rating_count']['four_rating']})"
          %li.three_rating
            %span
              = "Somewhat Helpful (#{today_stats_hash['rating_count']['three_rating']})"
          %li.two_rating
            %span
              = "Slightly Helpful (#{today_stats_hash['rating_count']['two_rating']})"
          %li.one_rating
            %span
              = "Not Really Helpful (#{today_stats_hash['rating_count']['one_rating']})"

  .col-lg-4
    .widget-simple-chart.text-right.card-box
      .circliful-chart.circliful#today_more_info{ 'data-bgcolor' => '#ebeff2', 'data-dimension' => '150', 'data-fgcolor' => '#61a9dc', 'data-fontsize' => '14', 'data-percent' => "#{today_stats_hash['more_info']['yes']}", 'data-text' => "#{today_stats_hash['more_info']['yes']}%" }
      %h3.text-success.counter
        = today_stats_hash['yes_info_c']
      %p.text-muted.text-nowrap interested for more info
