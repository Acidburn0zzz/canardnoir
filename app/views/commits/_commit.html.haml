%table.table.table-striped.table-condensed{ style: 'width:98%;' }
  %thead
    %tr{ id: 'dingus-row' }
      %td{ colspan: '7' }
        - if search_dingus
          - if @project.best_analysis.logged_at.present?
            %span.commits_date_range.pull-right
              %i.icon-time
              - if NamedCommit::TIME_SPANS[params[:time_span]] == :last_30_days
                = (@project.best_analysis.logged_at - 30.days).to_s(:mdy)
              - else
                = (@project.best_analysis.logged_at - 12.months).to_s(:mdy)
              &mdash;
              = @project.best_analysis.logged_at.to_s(:mdy)
          .margin_top_20#search-dingus
            %form.form-inline
              .row
                = render 'shared/search_dingus/page_entries_info', collection: @named_commits, total_count: 0
                .col-md-5.no_padding
                  %label #{t('shared.search_dingus.search_bar.search_text')} &nbsp;
                  = text_field_tag :query, params[:query]
                  = hidden_field_tag :time_span, params[:time_span]
                  %button.btn{ type: 'Submit' }
                    %i.icon-refresh
    %tr
      %th{ width: '40%' }= t('.commit_message')
      %th{ width: '17%' }= t('.contributor')
      %th.center{ width: '5%' }= t('.files_modified')
      %th.center{ width: '5%' }= t('.lines_added')
      %th.center{ width: '5%' }= t('.lines_removed')
      %th.center{ width: '18%' }= t('.code_location')
      %th{ width: '10%' }= t('.date')
  %tbody
    - @named_commits.each do |named_commit|
      - commit = named_commit.commit
      %tr{ class: highlight(commit.time) }
        %td= link_to h(commit.obfuscate_email(commit.comment).split("\n").first), project_commit_path(@project, commit)
        %td
          = avatar_for(named_commit.person)
          .committer_name{ style: 'padding-top:5px;' }
            = render partial: 'committer_name', locals: { named_commit: named_commit }
        %td{ colspan: '4', class: "commit_#{ commit.to_param }" }
          %span.icon-play-circle{ id: "icon_play_circle_#{ commit.to_param }" }
            = link_to t('.more'), '#', class: 'commit-details',
              commit_id: commit.to_param, project_id: @project.to_param
          %span.spinner.hidden{ id: "spinner_#{ commit.to_param }" }
            = image_tag 'spinner.gif'
        %td
          %abbr.date{ title: commit.time.to_s }
            = t('time_ago', time: time_ago_in_words(commit.time))

= will_paginate @named_commits if @named_commits.respond_to?(:total_pages)

- if @named_commits.blank?
  = render partial: 'shared/alert', locals: { message: t('.no_data') }
