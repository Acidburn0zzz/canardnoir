.col-md-12
  = render partial: 'forums/breadcrumb', locals: { forum:  @post.topic.forum }
.clear
.row
  .col-md-8.pull-left
    %h2= t('.edit_post')
  .col-md-3.pull-right
    - if current_user_is_admin?
      .btn-group
        .pull-left
          = button_to t('.spam'), make_spammer_account_path(@post.account), method: :post,
          data: { confirm: t('.spam_confirmation'), user: @topic.posts.first.account.name },
          class: 'btn btn-small btn-warning pull-left'
        .pull-left.margin_left_5
          = button_to t('.delete'), topic_post_path(@topic, @post), method: :delete,
          data: { confirm: t('.delete_confirmation') }, class: 'btn btn-danger btn-small pull-left'

.well.col-md-12
  .col-md-7.pull-left
    = form_for([@topic, @post], url: topic_post_path(@topic, @post), html: { method: 'put' }) do |f|
      = render partial: 'fields', locals: { f: f }
  .col-md-4.no_margin_left.pull-left{ style: 'margin-top: -10px' }
    = render partial: 'shared/markdown_help'
