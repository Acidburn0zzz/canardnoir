- if logged_in?
  .row
    .span9
      %h3= t('.post_a_response')
      = form_for :post, topic_posts_path(@topic), method: :post do |f|
        = render partial: 'posts/fields', locals: { f: f }
    .actions
      = f.submit t('.submit'), class: 'btn btn-primary btn-small'

    .span2
      = render 'shared/markdown_help'
- else
  %h3= t('.post_a_response')
  / TODO: The link opens a window for a session. Find out how to implement that feature
  = link_to t('.response'), '', class: 'needs_login'