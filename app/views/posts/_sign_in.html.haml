%a.needs_login{ href: '#', 'data-target' => '#postLogin', 'data-toggle' => 'modal' }= t('.response')

.modal.fade#postLogin{ 'aria-hidden' => 'true', 'aria-labelledby' => 'postLoginLabel', role: 'dialog', tabindex: '-1' }
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{ 'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button' }
          %span{ 'aria-hidden' => 'true' } Ã—
        %h4.modal-title#postLoginLabel= t('.login_required')
      .modal-body
        = render 'sessions/sign_in'
