.well.org-summary-quick-ref
  %h4= t('organizations.show.quick_ref')
  %dl.dl-horizontal
    %dt.margin_bottom_10= t('organizations.show.org_type')
    %dd= @organization.org_type_label
    %dt.margin_bottom_10= t('organizations.show.links')
    %dd
      = link_to bootstrap_icon('icon-external-link', t('.homepage')), @organization.homepage_url, target: '_blank'
    %dt= link_to t('organizations.show.managers'), organization_managers_path(@organization)
    %dd
      - if @organization.managers.any?
        = @organization.managers.map { |m| link_to m.name, account_path(m) }.to_sentence.html_safe
      - elsif current_user_is_admin?
        = link_to t('.add_new', name: @organization.name), new_manager_organization_path(@organization)
      - else
        &nbsp;
