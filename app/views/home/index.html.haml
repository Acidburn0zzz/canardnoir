- content_for(:html_title) { t('.page_title') }
.showcase
  .billboard
    %h1.discover_msg
      = t('.discover_message')
    %form.search#search_form{ action: projects_path }
      %input{ type: :hidden, name: 'ref', value: 'homepage' }
      %input.for_search_all_code{ type: :text, name: 'query', placeholder: t('.search_projects'), id: 'text' }
        %span.image_icon= image_tag(asset_url('search_icon2.png'), id: 'icon_text')
      %p.icon_search
    #global_statistics
      %p#content-0= t('.counting', count: number_with_delimiter(@home.lines_count.to_i))
      %p#content-1= t('.indexing', count: number_with_delimiter(@home.active_project_count))
      %p#content-2= t('.connecting', count: number_with_delimiter(@home.person_count))
      %p#content-3= t('.tracking', count: number_with_delimiter(@home.repository_count))
.home_page_row
  .col-md-4
    %h2.join_now= t('.join_now')
    = render partial: '/home/join_now_home'
  .col-md-8
    %h2.wh_new= t('.whats_new')
    = render partial: '/home/whats_new'
.landing.col-md-12.last_section
  = home_top_lists
