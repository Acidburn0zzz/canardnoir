- content_for(:html_title) { t('.page_title') }
-# TODO: Implement Cache
-# cache("homepage/" + (logged_in? ? "logged_in" : "logged_out").to_s, :ttl => 8.hours) do
.showcase
  .billboard
    %h1.discover_msg
      =t('.discover_message')
    %form.search#search_form{ action: projects_path }
      %input{ type: :hidden, name: 'ref', value: 'homepage' }
      %input.for_search_all_code{ type: :text, name: 'q', placeholder: "Search  Projects...", id: "text" }
        %span.image_icon= image_tag(asset_url("search_icon.png"), id: 'image_icon')
      %p.icon_search
    #global_statistics
      %p#content-0= t('.counting', count: number_with_delimiter(@home.lines_count.to_i))
      %p#content-1= t('.indexing', count: number_with_delimiter(Project.cached_count))
      %p#content-2= t('.connecting', count: number_with_delimiter(Person.count))
      %p#content-3= t('.tracking', count: number_with_delimiter(Repository.count))
.home_page_row
  .col-md-4
    %h2.join_now= t('.join_now')
    = render partial: "/home/join_now_home"
  .col-md-8
    %h2.wh_new= t('.whats_new')
    = render partial: "/home/whats_new"
.landing.col-md-12.last_section
  .col-md-4.top_ten
    %h3.most_popular_projects.common= t('.popular_projects')
    = render partial: "/home/content", locals: { popular_projects: @home.most_popular_projects, commit: 'user', colors: "popular", required: "most_popular_projects", max: @home.most_popular_projects.map(&:user_count).max}
  .col-md-4.top_ten
    %h3.most_active_projects.common= t('.active_projects')
    = render partial: "/home/content", locals: { popular_projects: @home.most_active_projects, commit: 'commit', colors: "active", required: "most_active_projects", max: @home.commit_count.max }
  .col-md-4.top_ten.last
    %h3.most_active_contributors.common= t('.active_contributors')
    = render partial: "/home/content", locals: { popular_projects: @home.most_active_contributors, commit: 'commit', colors: "contributor", required: "most_active_contributors", max: @home.vita_count.max }
