:ruby
  logged_at = project.best_analysis.logged_at
  name_class = show_name ? 'name' : 'noname'

= render partial: 'footer_css'

.project_footer
  .link_container
    = link_to project_url(project), target: '_blank', class: 'project_link' do
      = t('.more')
      = image_tag(widget_ohloh_logo_url)
  = link_to project_url(project), target: '_blank', class: "project_link #{name_class}", title: project.name do
    = truncate(project.name, lenth: 50) if show_name
    - if logged_at
      = t('.updated', at: logged_at.to_s(:mdy))
